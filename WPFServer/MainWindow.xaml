<Window x:Class="WPFServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Label Content="Client Count:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="137,10,0,0"/>
        <TextBlock  x:Name="ClientCounting"  Text="0" Height="19" Width="70" Margin="220,16,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>

        <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Margin="10,50,10,10">
            <StackPanel x:Name="ChatDisplay" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <!-- Chat messages will be displayed here -->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
